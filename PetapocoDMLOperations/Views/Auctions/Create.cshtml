
@{
	ViewBag.Title = "Create";
}

<div class="modal-header">
	<h5 class="modal-title">Create Auction</h5>
	<button type="button" class="close" data-dismiss="modal" aria-label="Close">
		<span aria-hidden="true">&times;</span>
	</button>
</div>


@using(Html.BeginForm("Create", "Auctions", FormMethod.Get,new { id = "createForm" }))
{
	<div class="modal-body">
		<div class="form-group">
			@Html.TextBox("Title", null, new { @class = "form-control", @placeholder = "Enter Auction Title" })
		</div>

		<div class="form-group">
			@Html.TextBox("Description", null, new { @class = "form-control", @placeholder = "Enter Auction Description" })
		</div>

		<div class="form-group">
			@Html.TextBox("Price", null, new { @class = "form-control", @placeholder = "Enter Auction Price" })
		</div>

		<div class="form-group">
			@Html.TextBox("StartingDate", null, new { @class = "form-control", @placeholder = "Enter Starting Date" })
		</div>

		<div class="form-group">
			@Html.TextBox("EndingDate", null, new { @class = "form-control", @placeholder = "Enter Ending Date" })
		</div>

	</div>
	<div class="modal-footer">
		<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
		<input type="button" name="response" value="Save" id="saveButton" class="btn btn-success" />

	</div>
}

<script>

	$("#saveButton").click(function () {
		debugger;
		$.ajax({
			url: "@Url.Action("Create","Auctions")",
			type: "post",
			data: $("#createForm").serialize()
		}).done(function (response) {
			
			window.location.reload();

		}).fail(function () {
			alert("There is some thing wrong ! please try agina ");
		});
	});
</script>